def bead_sort(arr):
    if not arr or any(x < 0 for x in arr):
        raise ValueError("Bead sort работает только для неотрицательных чисел")

    max_val = max(arr)
    grid = [[0] * len(arr) for _ in range(max_val)]

    # Раскладываем бусины
    for col, num in enumerate(arr):
        for row in range(num):
            grid[row][col] = 1

    # Бусины "падают"
    for row in range(max_val):
        count = sum(grid[row])
        for col in range(len(arr)):
            grid[row][col] = 1 if col < count else 0

    # Считываем результат
    result = [sum(grid[row][col] for row in range(max_val)) for col in range(len(arr))]
    return result


# Пример
print(bead_sort([5, 3, 1, 7, 4]))
